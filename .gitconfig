[user]
    name = Bundy Kim
    email = bundy@bundykim.com

[advice]
    pushNonFastForward = false

[apply]
    whitespace = nowarn

[alias]
    st = status
    diffstat = diff --stat -r
    c = commit
    co = checkout
    lol = log --pretty=oneline --abbrev-commit --graph --decorate
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    whitespace = tab-in-indent,tabwidth=4

[push]
    default = tracking
